doctype html
head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title Quản lý trung tâm ngoại ngữ và tin học - UEF
    link(rel="shortcut icon", href="./images/favicon.png", type="image/png")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
    link(href='../styles/base.css', rel='stylesheet')
    link(href='../styles/auth.css', rel='stylesheet')
    link(href='../others/font-awesome-5.12.0/css/all.min.css', rel='stylesheet')
body
    .container-fluid.bg-login
        .wrapper.d-flex.justify-content-center.align-item-center
            .row
                .col
                    .title
                        h1 Đăng nhập
                    if errors
                        each error in errors
                            .alert.alert-danger=error
                    form.form(action='/auth/login', method="post")
                        .form-group
                            label(for="username") Tên đăng nhập:
                            input.form-control#username(type="text", name="username", placeholder="Nhập tài khoản...", required)
                        .form-group
                            label(for="password") Mật khẩu:
                            input.form-control#password(type="password", name="password", placeholder="Nhập mật khẩu...", required)
                        .form-group.mx-3
                            a(href="/auth/reset") Quên mật khẩu
                        button.btn.btn-primary Đăng nhập
                

    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js", integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN", crossorigin="anonymous")
